# Real BLE Configuration
# IMPORTANT: No spaces around the = sign!

# Enable/disable BLE logging (default: true)
# Set to false to reduce console output
EXPO_PUBLIC_BLE_LOGS=true

# BLE scanning interval in milliseconds (default: 3000)
EXPO_PUBLIC_BLE_SCAN_INTERVAL=3000

# BLE connection timeout in milliseconds (default: 10000)
EXPO_PUBLIC_BLE_CONNECTION_TIMEOUT=10000

EXPO_PUBLIC_TEE_MAGICBLOCK_PRIVACY_RPC_URL=https://tee.magicblock.app/

# Environment-specific configurations:

# For Development:
# EXPO_PUBLIC_BLE_LOGS=true
# EXPO_PUBLIC_BLE_SCAN_INTERVAL=2000

# For Production:
# EXPO_PUBLIC_BLE_LOGS=false
# EXPO_PUBLIC_BLE_SCAN_INTERVAL=5000
# EXPO_PUBLIC_BLE_CONNECTION_TIMEOUT=15000

# Note: This app now only uses Real BLE
# Ensure you have a custom development build with react-native-ble-plx
# Run: npx expo run:android or npx expo run:ios